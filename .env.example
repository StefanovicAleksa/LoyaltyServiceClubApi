# Main Database Configuration
DB_USERNAME=your_db_username
DB_PASSWORD=your_db_password

# Test Database Configuration
TEST_DB_USERNAME=your_test_db_username
TEST_DB_PASSWORD=your_test_db_password

# AWS Authentication
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=eu-central-1
AWS_ROLE_ARN=arn:aws:iam::your-account-id:role/your-role-name

# SNS Configuration
SNS_TOPIC_ARN=arn:aws:sns:eu-central-1:your-account-id:your-topic-name

# SES Configuration
SES_SOURCE_EMAIL=your-email@example.com
SES_REGION=eu-central-1

# Development Settings
SANDBOX_MODE=true

# OTP Configuration
OTP_EXPIRY_MINUTES=10
MAX_VERIFICATION_ATTEMPTS=3
OTP_LENGTH=6
RESEND_COOLDOWN_MINUTES=1